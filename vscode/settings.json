{
  // editor
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.lineHeight": 14,
  "editor.formatOnSave": true,
  "editor.foldingStrategy": "indentation",
  "editor.foldingHighlight": false,
  "editor.fontFamily": "HackGen, 'Ricty Diminished', Menlo, Monaco, monospace, Ubuntu",
  "editor.rulers": [80, 120],
  "editor.suggestSelection": "first",
  "editor.minimap.enabled": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[markdown][sql][yaml]": {
    "editor.formatOnSave": false
  },
  "[php]": {
    "editor.tabSize": 4
  },
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.focusRecentEditorAfterClose": false,
  "zenMode.hideTabs": false,
  "files.trimFinalNewlines": true,

  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // theme
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark",
  "markdown-preview-github-styles.colorTheme": "light",

  // terminal
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.defaultProfile.linux": "tmux",
  "terminal.integrated.fontSize": 14,

  // vim
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<Enter>"],
      "commands": ["editor.action.insertLineAfter"]
    }
  ],
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.vimrc",
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.easymotionKeys": "sdfghjkl",
  "vim.hlsearch": true,

  "files.exclude": {
    "/.git": true,
    "/.DS_Store": true,
    "/node_modules": true,
    "/node_modules/": true
  },
  "files.watcherExclude": {
    "/node_modules/": true
  },

  // languages & tools
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "tailwindCSS.includeLanguages": {
    "blade": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.excludeLanguages": ["markdown"],
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // php
  "intelephense.diagnostics.undefinedClassConstants": false,
  "intelephense.diagnostics.undefinedConstants": false,
  "intelephense.diagnostics.undefinedFunctions": false,
  "intelephense.diagnostics.undefinedMethods": false,
  "intelephense.diagnostics.undefinedProperties": false,
  "intelephense.diagnostics.undefinedSymbols": false,
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.diagnostics.undefinedVariables": false,
  "intelephense.environment.phpVersion": "8.1.3"
}
